extends tpls/layout

block content
    ul
        li
            a(href="/") index
        li
            a(href="/reports") reports
        li
            a(href="/create") create

    div(class="left")
        form(action="/create", method="post", enctype="")
            div
                input(tabindex="1", id="graph", name="graph", type="text", maxlength="6", placeholder="graph")
            div
                input(type="text", id="_date", name="_date", value="text")
            div
                textarea(tabindex="7", id="lku", name="lku" placeholder="lku")
                textarea(tabindex="8", id="lkf", name="lkf", placeholder="lkf")
                textarea(tabindex="9", id="rb", name="rb", placeholder="rb")
                textarea(tabindex="9", id="sc", name="sc", placeholder="showcase")
                textarea(tabindex="9", id="pp", name="pp", placeholder="pp")
                textarea(tabindex="10", id="rest", name="rest", placeholder="rest")
            div
                input(type="submit", value="submit")
            div
                a(href="#", id="GraphCollector", tabindex="11") gen

    div(class="right")
        h1 Отчёт frontend цеха
        p(id="day")
        p(id="year")

        div(class="ct-chart")

        div(class="lku", data-id="lku")
            h3 Личный кабинет юр. лиц
            p

        div(class="lkf", data-id="lkf")
            h3 Личный кабинет физ. лиц
            p

        div(class="rb", data-id="rb")
            h3 Сайт - Robokassa
            p

        div(class="showcase", data-id="showcase")
            h3 Showcase
            p

        div(class="pp", data-id="pp")
            h3 Платёжные страницы
            p

        div(class="rest", data-id="rest")
            h3 Остальные сервисы и проекты
            p

include tpls/footer